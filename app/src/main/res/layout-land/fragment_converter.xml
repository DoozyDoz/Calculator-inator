<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:scrollbars="none"
            app:checkedChip="@id/length"
            app:selectionRequired="true"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/length"
                style="@style/Widget.Material3.Chip.Assist.Inator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/length"
                android:textAlignment="center"
                app:chipIcon="@drawable/ic_length" />

            <com.google.android.material.chip.Chip
                android:id="@+id/area"
                style="@style/Widget.Material3.Chip.Assist.Inator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/area"
                android:textAlignment="center"
                app:chipIcon="@drawable/ic_area" />

            <com.google.android.material.chip.Chip
                android:id="@+id/mass"
                style="@style/Widget.Material3.Chip.Assist.Inator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mass"
                android:textAlignment="center"
                app:chipIcon="@drawable/ic_mass" />

            <com.google.android.material.chip.Chip
                android:id="@+id/speed"
                style="@style/Widget.Material3.Chip.Assist.Inator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed"
                android:textAlignment="center"
                app:chipIcon="@drawable/ic_speed" />

            <com.google.android.material.chip.Chip
                android:id="@+id/pressure"
                style="@style/Widget.Material3.Chip.Assist.Inator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pressure"
                android:textAlignment="center"
                app:chipIcon="@drawable/ic_pressure" />

            <com.google.android.material.chip.Chip
                android:id="@+id/angle"
                style="@style/Widget.Material3.Chip.Assist.Inator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/angle"
                android:textAlignment="center"
                app:chipIcon="@drawable/ic_angle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/data"
                style="@style/Widget.Material3.Chip.Assist.Inator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data"
                android:textAlignment="center"
                app:chipIcon="@drawable/ic_data" />

            <com.google.android.material.chip.Chip
                android:id="@+id/volume"
                style="@style/Widget.Material3.Chip.Assist.Inator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/volume"
                android:textAlignment="center"
                app:chipIcon="@drawable/ic_volume" />

            <com.google.android.material.chip.Chip
                android:id="@+id/time"
                style="@style/Widget.Material3.Chip.Assist.Inator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textAlignment="center"
                app:chipIcon="@drawable/ic_time" />

            <com.google.android.material.chip.Chip
                android:id="@+id/temperature"
                style="@style/Widget.Material3.Chip.Assist.Inator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature"
                android:textAlignment="center"
                app:chipIcon="@drawable/ic_temperature" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <Spinner
        android:id="@+id/unit1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/unit2"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <Spinner
        android:id="@+id/unit2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout4"
        app:layout_constraintLeft_toRightOf="@id/unit1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textInputLayout3"
        app:layout_constraintTop_toBottomOf="@+id/unit2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText1"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:inputType="numberDecimal"
            android:textSize="36sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textInputLayout4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unit1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText2"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:inputType="numberDecimal"
            android:textSize="36sp" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
